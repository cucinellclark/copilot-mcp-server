{
    "_comment": "Example configuration file for Copilot MCP Server",
    "_instructions": "Copy this file to config.json and modify as needed",
    
    "port": 12011,
    "mcp_url": "127.0.0.1",
    
    "python_code": {
        "default_timeout": 30,
        "max_timeout": 300,
        "capture_output": true,
        "sandbox_enabled": false,
        "allowed_modules": [
            "math",
            "json",
            "datetime",
            "os",
            "sys"
        ],
        "temp_directory": "/tmp/copilot_python",
        "singularity_container": "/path/to/python.sif",
        "workspace_output": "CopilotCodeDev",
        "workspace_url": "https://p3.theseed.org/services/Workspace"
    },
    
    "rag_database": {
        "database_type": "chromadb",
        "database_path": "./rag_data",
        "collection_name": "default",
        "embedding_model": "sentence-transformers/all-MiniLM-L6-v2",
        "top_k_default": 5,
        "chunk_size": 1000,
        "chunk_overlap": 200,
        "summarization_model": {
            "model": "RedHatAI/Llama-4-Scout-17B-16E-Instruct-quantized.w4a16",
            "endpoint": "http://mango.cels.anl.gov:8003/v1/chat/completions",
            "apiKey": "EMPTY",
            "max_tokens": 1000000
        }
    },
    
    "file_utilities": {
        "_comment": "Configuration for file utilities tools",
        "session_base_path": "/tmp/copilot/sessions",
        "max_file_size_mb": 100,
        "default_limit": 1000,
        "max_limit": 10000,
        "mongo_url": "mongodb://127.0.0.1:27017/copilot",
        "mongo_database": "copilot",
        "mongo_collection": "session_files"
    },
    
    "sra_tools": {
        "_comment": "Configuration for SRA (Sequence Read Archive) tools",
        "singularity_container": "/vol/patric3/production/containers/ubuntu-027-11.sif"
    }
}

